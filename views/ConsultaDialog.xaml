<Window x:Class="HistoriaClinicaApp.Views.ConsultaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consulta Médica" 
        Height="650" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Fecha:" FontWeight="Bold"/>
                <DatePicker SelectedDate="{Binding Consulta.FechaHora}" IsEnabled="{Binding EsEditable}"/>
                
                <TextBlock Text="Motivo de Consulta:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Consulta.Motivo, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         MinHeight="60"
                         IsReadOnly="{Binding EsSoloLectura}"/>
                
                <TextBlock Text="Síntomas:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Consulta.Sintomas, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         MinHeight="70"
                         IsReadOnly="{Binding EsSoloLectura}"/>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Peso (kg):" FontWeight="Bold"/>
                        <TextBox Text="{Binding Consulta.Peso}" IsReadOnly="{Binding EsSoloLectura}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Altura (cm):" FontWeight="Bold"/>
                        <TextBox Text="{Binding Consulta.Altura}" IsReadOnly="{Binding EsSoloLectura}"/>
                    </StackPanel>
                </Grid>
                
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Presión Arterial:" FontWeight="Bold"/>
                        <TextBox Text="{Binding Consulta.PresionArterial}" IsReadOnly="{Binding EsSoloLectura}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Temperatura (°C):" FontWeight="Bold"/>
                        <TextBox Text="{Binding Consulta.Temperatura}" IsReadOnly="{Binding EsSoloLectura}"/>
                    </StackPanel>
                </Grid>
                
                <TextBlock Text="Diagnóstico:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Consulta.Diagnostico, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         MinHeight="70"
                         IsReadOnly="{Binding EsSoloLectura}"/>
                
                <TextBlock Text="Tratamiento:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Consulta.Tratamiento, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         MinHeight="70"
                         IsReadOnly="{Binding EsSoloLectura}"/>
                
                <TextBlock Text="Notas Médicas:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Consulta.NotasMedicas, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         MinHeight="60"
                         IsReadOnly="{Binding EsSoloLectura}"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Guardar" 
                   Click="Guardar_Click"
                   Background="#28A745"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"
                   Visibility="{Binding EsEditable, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <Button Content="Cerrar" 
                   Click="Cerrar_Click"
                   Background="#6C757D"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>