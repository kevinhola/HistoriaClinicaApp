<UserControl x:Class="HistoriaClinicaApp.Views.EstudiosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" 
                Content="➕ Nuevo Estudio" 
                Command="{Binding NuevoEstudioCommand}"
                Background="#007ACC"
                Foreground="White"
                Padding="15,8"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>
        
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Estudios}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoEstudio}" Width="*"/>
                <DataGridTextColumn Header="Resultado" Binding="{Binding Resultado}" Width="*"/>
                <DataGridTextColumn Header="Médico" Binding="{Binding NombreUsuario}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>