<Window x:Class="HistoriaClinicaApp.Views.UsuarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Usuario" 
        Height="400" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Nombre de Usuario:" FontWeight="Bold"/>
            <TextBox Text="{Binding Usuario.NombreUsuario, UpdateSourceTrigger=PropertyChanged}"/>
            
            <TextBlock Text="ContraseÃ±a:" FontWeight="Bold" Margin="0,15,0,0" Visibility="{Binding EsNuevo, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <PasswordBox x:Name="TxtPassword" Margin="0,5,0,0" Visibility="{Binding EsNuevo, Converter={StaticResource BoolToVisibilityConverter}}" PasswordChanged="TxtPassword_PasswordChanged"/>
            
            <TextBlock Text="Rol:" FontWeight="Bold" Margin="0,15,0,0"/>
            <ComboBox ItemsSource="{Binding Roles}"
                     SelectedItem="{Binding RolSeleccionado}"
                     DisplayMemberPath="Nombre"
                     SelectedValuePath="Id"/>
            
            <CheckBox Content="Usuario Activo" 
                     IsChecked="{Binding Usuario.Activo}"
                     Margin="0,15,0,0"
                     FontWeight="Bold"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Guardar" 
                   Click="Guardar_Click"
                   Background="#28A745"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"/>
            <Button Content="Cancelar" 
                   Click="Cancelar_Click"
                   Background="#6C757D"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>