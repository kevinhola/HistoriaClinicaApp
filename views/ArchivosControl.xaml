<UserControl x:Class="HistoriaClinicaApp.Views.ArchivosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" 
                Content="ðŸ“ Subir Archivo" 
                Command="{Binding SubirArchivoCommand}"
                Background="#007ACC"
                Foreground="White"
                Padding="15,8"
                HorizontalAlignment="Left"
                Margin="0,0,0,10"/>
        
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Archivos}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreArchivo}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoArchivo}" Width="80"/>
                <DataGridTextColumn Header="TamaÃ±o" Binding="{Binding TamanoBytes}" Width="100"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaSubida, StringFormat=dd/MM/yyyy}" Width="100"/>
                <DataGridTextColumn Header="Cifrado" Binding="{Binding Cifrado}" Width="80"/>
                
                <DataGridTemplateColumn Header="Acciones" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="ðŸ‘ï¸ Abrir" 
                                       Command="{Binding DataContext.AbrirArchivoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                       CommandParameter="{Binding}"
                                       Background="#17A2B8"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" 
                                       Command="{Binding DataContext.EliminarArchivoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                       CommandParameter="{Binding}"
                                       Background="#DC3545"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>