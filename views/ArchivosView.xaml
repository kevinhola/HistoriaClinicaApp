<UserControl x:Class="HistoriaClinicaApp.Views.ArchivosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- TÃ­tulo -->
        <TextBlock Grid.Row="0" 
                   Text="Archivos MÃ©dicos" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
        
        <!-- Info y Botones -->
        <Border Grid.Row="1" 
                Background="#F5F5F5" 
                Padding="15" 
                Margin="0,0,0,10"
                CornerRadius="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Paciente: " FontWeight="Bold"/>
                <TextBlock Text="{Binding NombrePaciente}" Margin="5,0,20,0"/>
                <TextBlock Text="DNI: " FontWeight="Bold"/>
                <TextBlock Text="{Binding DNIPaciente}" Margin="5,0,20,0"/>
                <Button Content="ðŸ“ Subir Archivo" 
                       Command="{Binding SubirArchivoCommand}"
                       Background="#007ACC"
                       Foreground="White"
                       Padding="15,5"/>
            </StackPanel>
        </Border>
        
        <!-- Lista de Archivos -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Archivos}"
                  SelectedItem="{Binding ArchivoSeleccionado}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding NombreArchivo}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoArchivo}" Width="100"/>
                <DataGridTextColumn Header="TamaÃ±o" Binding="{Binding TamanoBytes}" Width="100"/>
                <DataGridTextColumn Header="DescripciÃ³n" Binding="{Binding Descripcion}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding FechaSubida, StringFormat=dd/MM/yyyy HH:mm}" Width="140"/>
                <DataGridTextColumn Header="Cifrado" Binding="{Binding Cifrado}" Width="80"/>
                
                <DataGridTemplateColumn Header="Acciones" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="ðŸ‘ï¸ Abrir" 
                                       Command="{Binding DataContext.AbrirArchivoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                       CommandParameter="{Binding}"
                                       Background="#17A2B8"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"/>
                                <Button Content="ðŸ—‘ï¸ Eliminar" 
                                       Command="{Binding DataContext.EliminarArchivoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                       CommandParameter="{Binding}"
                                       Background="#DC3545"
                                       Foreground="White"
                                       Padding="8,4"
                                       Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>