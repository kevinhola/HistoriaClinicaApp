<Window x:Class="HistoriaClinicaApp.Views.PacienteDetalleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle del Paciente" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#007ACC" 
                Padding="15"
                Margin="0,0,0,10"
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding NombrePaciente}" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="White"/>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="DNI: " Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding DNIPaciente}" Foreground="White" Margin="5,0,20,0"/>
                    <TextBlock Text="Edad: " Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding EdadPaciente}" Foreground="White" Margin="5,0,20,0"/>
                    <TextBlock Text="Sexo: " Foreground="White" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SexoPaciente}" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- TabControl -->
        <TabControl Grid.Row="1">
            <TabItem Header="ðŸ“‹ Historia ClÃ­nica">
                <ContentControl x:Name="HistoriaContent"/>
            </TabItem>
            
            <TabItem Header="ðŸ©º Consultas">
                <ContentControl x:Name="ConsultasContent"/>
            </TabItem>
            
            <TabItem Header="ðŸ§ª Estudios">
                <ContentControl x:Name="EstudiosContent"/>
            </TabItem>
            
            <TabItem Header="ðŸ“ Archivos">
                <ContentControl x:Name="ArchivosContent"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>