<Window x:Class="HistoriaClinicaApp.Views.PacienteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paciente" 
        Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="DNI:" FontWeight="Bold"/>
                <TextBox Text="{Binding Paciente.DNI, UpdateSourceTrigger=PropertyChanged}" MaxLength="20"/>
                
                <TextBlock Text="Nombre:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.Nombre, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Apellido:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.Apellido, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Fecha de Nacimiento:" FontWeight="Bold" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="{Binding Paciente.FechaNacimiento}"/>
                
                <TextBlock Text="Sexo:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ComboBox SelectedItem="{Binding Paciente.Sexo}">
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="F"/>
                    <ComboBoxItem Content="Otro"/>
                </ComboBox>
                
                <TextBlock Text="Teléfono:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.Telefono, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Email:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.Email, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Dirección:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.Direccion, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Obra Social:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.ObraSocial, UpdateSourceTrigger=PropertyChanged}"/>
                
                <TextBlock Text="Número de Afiliado:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Paciente.NumeroAfiliado, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Guardar" 
                   Click="Guardar_Click"
                   Background="#28A745"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"/>
            <Button Content="Cancelar" 
                   Click="Cancelar_Click"
                   Background="#6C757D"
                   Foreground="White"
                   Padding="20,8"
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>